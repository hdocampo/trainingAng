body{
	padding: 20px;
}
ul{
	list-style: none;
}
.wrapper-view{
	position: relative;
}
.wrapper-view > div{
	position: absolute;
	top: 0;
}
.left{
	float: left;
}

.ng-leave{ 
	opacity: 1;
	-webkit-transition: all 0.5s ease; 
}
.ng-leave.ng-leave-active{
	opacity: 0;
	background: red;
	-webkit-transition: all 0.5s ease; 	
}
.ng-enter{ 
	opacity: 0;
	-webkit-transition: all 1s ease; 
}
.ng-enter.ng-enter-active{
	opacity: 1;
	-webkit-transition: all 1s ease; 	
}

nav ul li{ 
	display: inline-block;
	margin-right: 20px;
}
nav ul{
	margin: 0;
	padding: 0;
}
li.shot .thumbnail{
	min-height: 200px;
}
li.shot .thumbnail .wrapper-pic{
	position: relative;
	color: white;
	overflow: hidden;
	background: #333;
}
li.shot .thumbnail .wrapper-pic img {
	-webkit-transition: 0.3s ease all;
}
li.shot .thumbnail .wrapper-pic:hover img {
	-webkit-transform: translate(-100%, 0px);
}
li.shot strong{
	line-height: 1.1em;
	margin-top: 10px;
	display: block;
	font-size: 1em;
}
li.shot .meta-info{
	margin: 0; 
	padding: 20px 0 0;
	position: absolute;
	top: -100%;
	width: 100%;
	height: 100%;
	background: rgba(0,0,0,0.75);
	-webkit-transition: 0.3s ease all;
	-moz-transition: 0.3s ease all;
	-ms-transition: 0.3s ease all;
	-o-transition: 0.3s ease all;
}
li.shot .meta-info a{
	margin-left: 7%;
}
li.shot .meta-info .user a{
	font-size: 1.3em;
}
li.shot .wrapper-pic:hover ul.meta-info{
	top:0;
	cursor: pointer;
}

li.shot .meta-info li{
	display: inline-block;
	font-size: 0.8em;
}
li.shot .meta-info li:first-child{
	width: 100%;
}
li.shot .meta-info li + li{
	padding-left: 10%;
}
li.shot .meta-info .glyphicon:before {
	position: relative;
	left: -5px;
	top: 2px;
}